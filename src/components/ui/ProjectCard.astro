---
/**
 * ProjectCard.astro
 * Reusable card component for displaying project summaries
 */

interface Props {
  title: string;
  description: string;
  image: string;
  category: string;
  status: 'completed' | 'ongoing' | 'planned';
  technologies: string[];
  slug: string;
  github?: string;
  featured?: boolean;
}

const { 
  title, 
  description, 
  image, 
  category, 
  status, 
  technologies, 
  slug, 
  github,
  featured = false 
} = Astro.props;

// Status styling map
const statusStyles = {
  completed: {
    bg: 'bg-green-500/10',
    text: 'text-green-400',
    border: 'border-green-500/20',
    label: 'Completed'
  },
  ongoing: {
    bg: 'bg-amber-500/10',
    text: 'text-amber-400',
    border: 'border-amber-500/20',
    label: 'Ongoing'
  },
  planned: {
    bg: 'bg-slate-500/10',
    text: 'text-slate-400',
    border: 'border-slate-500/20',
    label: 'Planned'
  }
};

const currentStatus = statusStyles[status];
---

<article class={`card group overflow-hidden ${featured ? 'ring-1 ring-primary-500/30' : ''}`}>
  <!-- Project Image -->
  <div class="relative aspect-video mb-4 rounded-lg overflow-hidden bg-slate-800">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover 
             group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
    
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent"></div>
    
    <!-- Category Badge -->
    <span class="absolute top-3 left-3 px-2 py-1 text-xs font-mono 
                 bg-slate-900/80 backdrop-blur text-primary-400 rounded
                 border border-slate-700/50">
      {category}
    </span>
    
    <!-- Featured Badge -->
    {featured && (
      <span class="absolute top-3 right-3 px-2 py-1 text-xs font-mono 
                   bg-primary-500/20 text-primary-400 rounded
                   border border-primary-500/30">
        Featured
      </span>
    )}
  </div>
  
  <!-- Content -->
  <div class="space-y-3">
    <!-- Title and Status -->
    <div class="flex items-start justify-between gap-4">
      <h3 class="text-lg font-bold text-white group-hover:text-primary-400 
                 transition-colors leading-tight">
        {title}
      </h3>
      <span class={`shrink-0 px-2 py-0.5 text-xs font-medium rounded border 
                    ${currentStatus.bg} ${currentStatus.text} ${currentStatus.border}`}>
        {currentStatus.label}
      </span>
    </div>
    
    <!-- Description -->
    <p class="text-slate-400 text-sm line-clamp-2 leading-relaxed">
      {description}
    </p>
    
    <!-- Technologies -->
    <div class="flex flex-wrap gap-1.5 pt-1">
      {technologies.slice(0, 4).map(tech => (
        <span class="tech-badge text-[10px]">{tech}</span>
      ))}
      {technologies.length > 4 && (
        <span class="tech-badge text-[10px] bg-slate-700">
          +{technologies.length - 4} more
        </span>
      )}
    </div>
    
    <!-- Links -->
    <div class="flex items-center gap-4 pt-2 border-t border-slate-800">
      <a 
        href={`/projects/${slug}`} 
        class="text-sm text-primary-400 hover:text-primary-300 
               font-medium flex items-center gap-1 group/link"
      >
        View Details
        <svg 
          class="w-3 h-3 group-hover/link:translate-x-1 transition-transform" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
      
      {github && (
        <a 
          href={github} 
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-slate-500 hover:text-slate-300 
                 flex items-center gap-1"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
    </div>
  </div>
</article>
