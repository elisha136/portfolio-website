    icon: 'ü§ñ',
    description: 'Autonomous systems development',
    skills: ['ROS2', 'PX4', 'MAVLink', 'MAVSDK', 'ArduPilot', 'Pixhawk', 'QGroundControl']
  },
  {
    title: 'Embedded Systems',
    icon: 'üîå',
    description: 'Hardware integration & control',
    skills: ['Jetson Orin Nano', 'Raspberry Pi', 'Arduino', 'STM32', 'GPIO', 'I2C', 'SPI', 'UART']
  },
  {
    title: 'Programming',
    icon: 'üíª',
    description: 'Software development',
    skills: ['Python', 'C++', 'MATLAB', 'Bash', 'Git', 'Linux', 'Docker']
  },
  {
    title: 'Machine Learning',
    icon: 'üß†',
    description: 'Data science & AI',
    skills: ['Scikit-learn', 'Random Forest', 'Pandas', 'NumPy', 'Data Analysis', 'Time Series']
  },
  {
